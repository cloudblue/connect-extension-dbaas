#updateBrowserWarning {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;

  z-index: 3;

  display: none;
  vertical-align: middle;

  text-align: center;
  white-space: nowrap;

  background-color: #ffffff;

  &:after {
    content: "";
    display: inline-block;
    height: 100%;
    vertical-align: middle;
  }

  .message {
    display: inline-block;
    vertical-align: middle;

    color: #212121;

    .message__title {
      margin-bottom: 24px;

      font-size: 24px;
      font-weight: 500;
      line-height: 1;
    }
    p {
      line-height: 20px;
      margin: 0;
    }

    .message__icon {
      display: inline-block;
      width: 56px;
      height: 56px;
      margin-bottom: 48px;

      background-image: url('data:image/png;base64,');
    }
    .message__suggested-browsers {
      margin-top: 40px;

      color: #707070;
    }
  }
}
